{
  "engines": {
    "node": "18.x",
    "npm": "9.5.x"
  },
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "start": "nuxt start",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "concurrently --kill-others -s first \"npm run start\" \"npm run cy:run\"",
    "test:watch": "vitest --reporter verbose --globals --coverage",
    "lint-all": "eslint .",
    "lint-fix-all": "eslint . --fix",
    "prepare": "husky install",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "vitest:run": "vitest run --coverage",
    "format:check": "prettier . \"!content/**\" --cache --check --ignore-path ./.gitignore",
    "format:fix": "prettier . \"!content/**\" --cache --ignore-path ./.gitignore --write",
    "lint:fix": "run-p \"lint:*:fix\"",
    "lint:code:check": "eslint . --cache --ext .js,.ts,.vue --ignore-path ./.gitignore",
    "lint:code:fix": "pnpm run lint:code:check --fix",
    "lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --allow-empty-input --cache --ignore-path ./.gitignore",
    "lint:styles:fix": "pnpm run lint:styles:check --fix"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix"
  },
  "devDependencies": {
    "@acdh-oeaw/eslint-config": "^1.0.0",
    "@acdh-oeaw/eslint-config-nuxt": "^1.0.0",
    "@acdh-oeaw/eslint-config-vue": "^1.0.0",
    "@acdh-oeaw/prettier-config": "^1.0.0",
    "@intlify/unplugin-vue-i18n": "^0.8.0",
    "@mdi/font": "^7.0.96",
    "@mdi/js": "^7.0.96",
    "@nuxt/content": "^2.2.2",
    "@nuxt/image-edge": "^1.0.0-27919678.2f5b64b",
    "@nuxt/test-utils": "^3.0.0",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitest/coverage-c8": "^0.25.3",
    "@vue/test-utils": "^2.2.0",
    "c8": "^7.12.0",
    "concurrently": "^7.6.0",
    "cypress": "^12.5.1",
    "eslint": "^8.28.0",
    "husky": "^8.0.3",
    "jsdom": "^20.0.1",
    "lint-staged": "^13.1.0",
    "msw": "^0.49.1",
    "nuxt": "3.1.*",
    "swagger-typescript-api": "^12.0.2",
    "vite-plugin-vuetify": "^1.0.0",
    "vitest": "^0.25.3",
    "vue-i18n": "^9.2.2",
    "sass": "^1.60.0",
    "vuetify": "^3.1.12",
    "prettier": "^2.8.8"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.0",
    "leaflet": "^1.9.2",
    "vue-country-flag-next": "^2.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@acdh-oeaw/eslint-config",
      "@acdh-oeaw/eslint-config-vue",
      "@acdh-oeaw/eslint-config-nuxt"
    ]
  }
}
